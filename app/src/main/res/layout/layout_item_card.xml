<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/cardViewItemCard"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:cardBackgroundColor="@color/color_fusion_monster"
	app:contentPadding="10dp"
	app:cardCornerRadius="24dp"
	android:layout_marginVertical="5dp"
	android:layout_marginHorizontal="10dp">
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/layoutDataCard">
		
		<ImageView
			android:id="@+id/imageViewCard"
			android:layout_width="@dimen/width_small_card_image"
			android:layout_height="@dimen/height_small_card_image"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/guidelineDivider"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:ignore="contentDescription"
			tools:srcCompat="@drawable/_0461804s" />
		
		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guidelineDivider"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.45" />
		
		<TextView
			android:id="@+id/textViewCardName"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:autoSizeTextType="uniform"
			android:padding="5dp"
			android:textAlignment="center"
			android:textStyle="bold"
			app:layout_constraintBottom_toTopOf="@id/textViewTypeCard"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="@+id/guidelineDivider"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="Destiny HERO - Destroyer Phoenix Enforcer" />
		
		<TextView
			android:id="@+id/textViewTypeCard"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:autoSizeTextType="uniform"
			android:textAlignment="center"
			android:textStyle="bold"
			android:padding="13dp"
			app:layout_constraintTop_toBottomOf="@+id/textViewCardName"
			app:layout_constraintBottom_toTopOf="@+id/textViewRaceCard"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="@+id/guidelineDivider"
			tools:text="Fusion Monster"/>
		
		<TextView
			android:id="@+id/textViewRaceCard"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:textAlignment="center"
			android:textStyle="bold"
			android:padding="13dp"
			android:autoSizeTextType="uniform"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="@+id/guidelineDivider"
			app:layout_constraintTop_toBottomOf="@+id/textViewTypeCard"
			tools:text="Warrior" />
	
	</androidx.constraintlayout.widget.ConstraintLayout>
	

</com.google.android.material.card.MaterialCardView>